<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- form view  -->
    <record id="credit_card_manager_wizard" model="ir.ui.view">
        <field name="name">credit.card.manager.wizard</field>
        <field name="model">credit.card.manager</field>
        <field name="arch" type="xml">
            <form string="credit_card_manager">
                <group>
                    <field name="name"/>
                </group>
                <footer>
                    <button name="confirm_payment" confirm="Are you sure?"
                            string="Paid" type="object" class="btn-primary"/>
                    <button string="Remind me Later" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>