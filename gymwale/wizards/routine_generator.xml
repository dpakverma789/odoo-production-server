<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- form view  -->
    <record id="gymwale_routine_generator_wizard" model="ir.ui.view">
        <field name="name">gymwale.routine_generator.wizard</field>
        <field name="model">gymwale.routine_generator.wizard</field>
        <field name="arch" type="xml">
            <form string="gymwale_routine_generator">
                <group>
                    <field name="routine" readonly="1"/>
                </group>
                <footer>
                    <button string="OK" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>